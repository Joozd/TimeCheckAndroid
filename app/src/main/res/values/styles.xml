<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for header text -->
    <style name="DialogHeader" parent="Theme.TimeCheck">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for big text to draw a users attention-->
    <style name="EmphasizedText" parent="Theme.TimeCheck">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Action Bar -->
    <style name="ActionBar" parent="Theme.TimeCheck">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>


</resources>